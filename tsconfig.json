{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ES2018",
        "module": "commonjs",
        "paths": {
            "@/*": ["./src/*"]
        },
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*",
    ],
}
