{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "ES2018",
        "module": "commonjs",
        "paths": {
            "@/*": ["./src/*"],
            "style/*": ["./src/style/*"],
        },
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./src/**/*",
    ],
    "files": [
        "./vue-shims.d.ts",
    ]
}
